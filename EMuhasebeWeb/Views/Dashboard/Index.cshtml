@model EMuhasebeWeb.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">📊 Dashboard</h2>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Users</h5>
                <h3>@Model.UserCount</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Customers</h5>
                <h3>@Model.CustomerCount</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-dark bg-warning shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Invoices</h5>
                <h3>@Model.InvoiceCount</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Today's Income</h5>
                <h3>@Model.TodayIncome ₺</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-danger shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Today's Expense</h5>
                <h3>@Model.TodayExpense ₺</h3>
            </div>
        </div>
    </div>
</div>
