@model List<Customer>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["Customers"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">@Localizer["AddCustomer"]</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Localizer["FullName"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Phone"]</th>
            <th>@Localizer["Address"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-warning btn-sm">@Localizer["Edit"]</a>
                    <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>