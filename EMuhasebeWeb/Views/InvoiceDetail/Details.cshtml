@model EMuhasebeWeb.Models.Invoice
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["InvoiceDetails"]</h2>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>@Localizer["Customer"]:</strong> @Model.Customer?.FullName</p>
        <p><strong>@Localizer["Date"]:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
        <p><strong>@Localizer["TotalAmount"]:</strong> @Model.TotalAmount ₺</p>
    </div>
</div>

<a asp-controller="InvoiceDetail" asp-action="Create" asp-route-invoiceId="@Model.InvoiceID" class="btn btn-primary mb-3">
    @Localizer["AddInvoiceDetail"]
</a>

@if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Localizer["Product"]</th>
                <th>@Localizer["Quantity"]</th>
                <th>@Localizer["UnitPrice"]</th>
                <th>@Localizer["LineTotal"]</th>
                <th>@Localizer["Actions"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.InvoiceDetails)
            {
                <tr>
                    <td>@detail.Product?.Name</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice ₺</td>
                    <td>@detail.LineTotal ₺</td>
                    <td>
                        <a asp-controller="InvoiceDetail" asp-action="Delete" asp-route-id="@detail.InvoiceDetailID" class="btn btn-danger btn-sm">
                            @Localizer["Delete"]
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">@Localizer["NoInvoiceDetails"]</p>
}
