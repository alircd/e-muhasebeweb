@model EMuhasebeWeb.Models.InvoiceDetail
@{
    ViewData["Title"] = "Delete Invoice Detail";
}

<div class="card shadow-sm rounded-4 p-4">
    <h2 class="mb-4 text-danger">🗑️ Delete Invoice Detail</h2>

    <div class="alert alert-warning">
        <p>Are you sure you want to delete this invoice detail?</p>
        <ul class="mb-0">
            <li><strong>Product:</strong> @Model.Product?.Name</li>
            <li><strong>Quantity:</strong> @Model.Quantity</li>
            <li><strong>Unit Price:</strong> @Model.UnitPrice.ToString("0.00") ₺</li>
            <li><strong>Line Total:</strong> @Model.LineTotal.ToString("0.00") ₺</li>
        </ul>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="InvoiceDetailID" />
        <button type="submit" class="btn btn-danger me-2">🗑️ Confirm Delete</button>
        <a asp-action="Details" asp-controller="Invoice" asp-route-id="@Model.InvoiceID" class="btn btn-secondary">
            ❌ Cancel
        </a>
    </form>
</div>
