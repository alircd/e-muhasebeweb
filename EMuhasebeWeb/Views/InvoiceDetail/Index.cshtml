@model List<EMuhasebeWeb.Models.InvoiceDetail>
@{
    ViewData["Title"] = "Invoice Details";
}

<div class="card shadow-sm rounded-4 p-4">
    <h2 class="mb-4">🧾 Invoice Details</h2>

    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Line Total</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("0.00") ₺</td>
                    <td>@item.LineTotal.ToString("0.00") ₺</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.InvoiceDetailID" class="btn btn-sm btn-outline-warning me-2">
                            ✏️ Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.InvoiceDetailID" class="btn btn-sm btn-outline-danger">
                            🗑️ Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
