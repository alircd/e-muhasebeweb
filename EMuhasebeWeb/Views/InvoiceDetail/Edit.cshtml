@model EMuhasebeWeb.Models.InvoiceDetail
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["EditInvoiceDetail"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="InvoiceDetailID" />
    <input type="hidden" asp-for="InvoiceID" />

    <div class="mb-3">
        <label>@Localizer["Product"]</label>
        <select asp-for="ProductID" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "ProductID", "Name"))">
            <option value="">@Localizer["SelectProduct"]</option>
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>@Localizer["Quantity"]</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>@Localizer["UnitPrice"]</label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
</form>
