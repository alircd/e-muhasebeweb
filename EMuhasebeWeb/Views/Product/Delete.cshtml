@model EMuhasebeWeb.Models.Product
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["DeleteProduct"]</h2>
<hr />

<div>
    <h5>@Localizer["AreYouSure"]</h5>
    <p>@Model.Name - @Model.Price.ToString("C")</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductID" />
        <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
        <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
    </form>
</div>
