@model Product
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteProduct"];
}

<h2 class="text-danger">@Localizer["DeleteProduct"]</h2>

<div class="alert alert-warning">
    <p>@Localizer["DeleteConfirmation"]</p>
    <ul>
        <li><strong>@Localizer["Name"]:</strong> @Model.Name</li>
        <li><strong>@Localizer["Price"]:</strong> @Model.Price ₺</li>
    </ul>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>