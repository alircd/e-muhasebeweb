@model List<EMuhasebeWeb.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="card shadow-sm rounded-4 p-4">
    <h2 class="mb-4">📦 Product List</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">➕ Add New Product</a>

    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price ₺</td>
                    <td>@item.Description</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-warning me-2">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
