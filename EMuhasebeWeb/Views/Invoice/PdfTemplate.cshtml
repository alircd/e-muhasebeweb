@model EMuhasebeWeb.Models.Invoice

<h1>Invoice Summary</h1>
<p><strong>Customer:</strong> @Model.Customer?.FullName</p>
<p><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</p>
<p><strong>Total Amount:</strong> @Model.TotalAmount ₺</p>

@if (Model.InvoiceDetails?.Any() == true)
{
    <table style="width:100%; border-collapse: collapse;" border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Line Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.InvoiceDetails)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice ₺</td>
                    <td>@item.LineTotal ₺</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p><em>No invoice details found.</em></p>
}
