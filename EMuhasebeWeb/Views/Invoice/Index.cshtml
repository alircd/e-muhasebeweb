@model List<EMuhasebeWeb.Models.Invoice>
@{
    ViewData["Title"] = "Invoices";
}

<div class="card shadow-sm rounded-4 p-4">
    <h2 class="mb-4">🧾 Invoices</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">➕ Add New Invoice</a>

    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Customer</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invoice in Model)
            {
                <tr>
                    <td>@invoice.Customer?.FullName</td>
                    <td>@invoice.Date.ToString("yyyy-MM-dd")</td>
                    <td>@invoice.TotalAmount ₺</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@invoice.InvoiceID" class="btn btn-sm btn-outline-warning me-2">✏️ Edit</a>
                        <a asp-action="Delete" asp-route-id="@invoice.InvoiceID" class="btn btn-sm btn-outline-danger me-2">🗑️ Delete</a>
                        <a asp-action="Details" asp-route-id="@invoice.InvoiceID" class="btn btn-sm btn-outline-primary">📄 Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
