@model Invoice
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditInvoice"];
    var customers = ViewBag.Customers as List<Customer>;
}

<h2>@Localizer["EditInvoice"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="InvoiceID" />

    <div class="mb-3">
        <label class="form-label">@Localizer["Customer"]</label>
        <select asp-for="CustomerID" class="form-control" asp-items="@(new SelectList(customers, "CustomerID", "FullName", Model.CustomerID))">
            <option value="">@Localizer["SelectCustomer"]</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["Date"]</label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">@Localizer["TotalAmount"]</label>
        <input asp-for="TotalAmount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Update"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancel"]</a>
</form>
