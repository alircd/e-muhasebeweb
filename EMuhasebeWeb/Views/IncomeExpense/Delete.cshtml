@model EMuhasebeWeb.Models.IncomeExpense
@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="card shadow-sm rounded-4 p-4">
    <h2 class="text-danger mb-3">🗑️ Delete Transaction</h2>

    <div class="alert alert-warning">
        <p>Are you sure you want to delete this record?</p>
        <ul>
            <li><strong>Date:</strong> @Model.Date.ToString("yyyy-MM-dd")</li>
            <li><strong>Description:</strong> @Model.Description</li>
            <li><strong>Amount:</strong> @Model.Amount ₺</li>
            <li><strong>Type:</strong> @(Model.IsIncome ? "Income" : "Expense")</li>
        </ul>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IncomeExpenseID" />
        <button type="submit" class="btn btn-danger me-2">🗑️ Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Cancel</a>
    </form>
</div>
