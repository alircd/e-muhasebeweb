@model EMuhasebeWeb.Models.User
@{
    ViewData["Title"] = "Delete User";
}

<div class="card shadow-sm rounded-4 p-4">
    <h2 class="text-danger mb-3">🗑️ Delete User</h2>
    <hr />

    <div class="alert alert-warning">
        <h5 class="mb-2">Are you sure you want to delete this user?</h5>
        <p class="mb-0">
            <strong>@Model.FullName</strong> - @Model.Email
        </p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserID" />
        <button type="submit" class="btn btn-danger me-2">🗑️ Delete</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Cancel</a>
    </form>
</div>
