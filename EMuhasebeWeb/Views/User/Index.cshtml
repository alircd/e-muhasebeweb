@model List<User>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<h2>@Localizer["Users"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">@Localizer["AddUser"]</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Localizer["FullName"]</th>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Role"]</th>
            <th>@Localizer["Actions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Role?.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-danger btn-sm">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>